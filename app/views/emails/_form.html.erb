<%= form_for(@email) do |f| %>
    <% if @email.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:</h2>

          <ul>
            <% @email.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :to %>
      <%= f.select(:to, @params[:recipients]) %>
    </div>
    <div class="field">
      <%= f.label :subject %>
      <%= f.text_field :subject, :value => @params[:subject] %>
    </div>
    <div class="field">
      <%= f.label :message %>
      <%= f.text_area :message, :value => @params[:reply_text], :autofocus => @params[:is_reply] %>
    </div>
    <div class="actions">
      <%= f.submit 'Send', 'data-inline' => :true %>
    </div>
<% end %>
