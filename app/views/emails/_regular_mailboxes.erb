<%= render 'layouts/top_bar' %>

<div class="row">
  <div class="large-3 columns">
    <ul class="tabs vertical regular" data-tab>
      <li>Mailboxes</li>
      <li class="tab-title active"><a class="inbox-title" href="#panel1">Inbox</a></li>
      <li class="tab-title"><a class="sent-title" href="#panel2">Sent</a></li>
      <li class="tab-title"><a class="archived-title" href="#panel3">Archived</a></li>
      <li class="tab-title"><a class="unapproved-title" href="#panel4">Unapproved</a></li>
    </ul>
  </div>

  <div class="large-9 columns">
    <div data-alert class="bad-emails alert"></div>
    <div class="tabs-content">
      <div class="content active" id="panel1">
        <div class="inbox">
        </div>
      </div>
      <div class="content" id="panel2">
        <div class="sent">
        </div>
      </div>
      <div class="content" id="panel3">
        <div class="archived">
        </div>
      </div>
      <div class="content" id="panel4">
        <div class="unapproved">
        </div>
      </div>
    </div>
  </div>
</div>